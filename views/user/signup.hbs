<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container mt-5 pl-5">
      <h2>Create new Account</h2>
      <form action="/signup" method="post" enctype="multipart/form-data">
   <div class="form-group">
    <label >Name</label>
    <input type="text" class="form-control" name="Name" placeholder="Enter Name">
  </div>
  
  <div class="form-group mt-2">
    <label for="course">Course:</label>
  <select id="course" name="cource" style="width: 100%;" class="form-control">
    <option value="BCA">BCA</option>
    <option value="BCom">BCom</option>
    <option value="BA English">BA English</option>
    
  </select>
  </div>
  
  <div class="form-group mt-2">
    <label >Email address</label>
    <input type="email" class="form-control" name="Email" placeholder="Enter email">
  </div>
  <div class="form-group mt-2">
    <label>Password</label>
    <input type="password" class="form-control" name="Password" placeholder="Password">
  </div>
  <br><br>
  <a href="/login" style="color: blue; font-weight: bold;">Already have Account?</a>
  <button type="submit" class="btn btn-primary float-right" style="float: right;">Signup</button>
  
</form>

    </div>

  </div>
</div>